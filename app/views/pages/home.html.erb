<!-- Intent Selection Form (Hidden) -->
<form id="intent-form" action="<%= select_intent_path %>" method="get" class="hidden">
  <input type="hidden" name="intent" id="selected-intent">
  <input type="hidden" name="additional_intents[]" id="additional-intents">
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const intentCards = document.querySelectorAll('.intent-card');
  const showMoreBtn = document.getElementById('show-more-btn');
  const secondaryOptions = document.getElementById('secondary-options');
  const customIntentInput = document.getElementById('custom-intent');
  const customIntentBtn = document.getElementById('custom-intent-btn');
  const intentForm = document.getElementById('intent-form');
  const selectedIntentInput = document.getElementById('selected-intent');
  const additionalIntentsInput = document.getElementById('additional-intents');

  let selectedIntents = [];

  // Handle card selection
  intentCards.forEach(card => {
    card.addEventListener('click', function() {
      const intent = this.dataset.intent;
      
      // Toggle selection
      if (selectedIntents.includes(intent)) {
        selectedIntents = selectedIntents.filter(i => i !== intent);
        this.classList.remove('selected');
      } else {
        selectedIntents.push(intent);
        this.classList.add('selected');
      }

      // Update visual state
      updateCardStates();
    });
  });

  // Show/hide secondary options
  showMoreBtn.addEventListener('click', function() {
    const isHidden = secondaryOptions.classList.contains('hidden');
    
    if (isHidden) {
      secondaryOptions.classList.remove('hidden');
      secondaryOptions.style.display = 'block';
      this.innerHTML = 'Show less options <svg class="w-5 h-5 ml-2 transform rotate-180 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>';
    } else {
      secondaryOptions.classList.add('hidden');
      secondaryOptions.style.display = 'none';
      this.innerHTML = 'Show more options <svg class="w-5 h-5 ml-2 transform transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>';
    }
  });

  // Handle custom intent
  customIntentBtn.addEventListener('click', function() {
    const customIntent = customIntentInput.value.trim();
    if (customIntent) {
      selectedIntentInput.value = 'custom';
      additionalIntentsInput.value = customIntent;
      intentForm.submit();
    }
  });

  // Handle Enter key in custom intent input
  customIntentInput.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      customIntentBtn.click();
    }
  });

  // Update card visual states
  function updateCardStates() {
    intentCards.forEach(card => {
      const intent = card.dataset.intent;
      const isSelected = selectedIntents.includes(intent);
      
      if (isSelected) {
        card.querySelector('div').classList.add('ring-2', 'ring-blue-500/50', 'bg-gradient-to-br', 'from-blue-50/80', 'to-purple-50/80', 'border-blue-300/80');
        card.querySelector('div').style.boxShadow = '0 20px 25px -5px rgba(59, 130, 246, 0.1), 0 10px 10px -5px rgba(59, 130, 246, 0.04)';
      } else {
        card.querySelector('div').classList.remove('ring-2', 'ring-blue-500/50', 'bg-gradient-to-br', 'from-blue-50/80', 'to-purple-50/80', 'border-blue-300/80');
        card.querySelector('div').style.boxShadow = '';
      }
    });

    // Auto-submit if primary intent is selected
    if (selectedIntents.length > 0) {
      const primaryIntent = selectedIntents[0];
      const additionalIntents = selectedIntents.slice(1);
      
      selectedIntentInput.value = primaryIntent;
      additionalIntentsInput.value = additionalIntents.join(',');
      
      // Small delay to show selection feedback
      setTimeout(() => {
        intentForm.submit();
      }, 500);
    }
  }
});
</script>
