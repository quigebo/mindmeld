<% content_for :title, "#{@entity.name} - #{@story.title}" %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <div class="flex items-center">
          <%= link_to story_path(@story), class: "mr-3 text-gray-400 hover:text-gray-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <div>
            <h1 class="text-xl font-semibold text-gray-900"><%= @entity.name %></h1>
            <p class="text-sm text-gray-500"><%= @story.title %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Entity Details -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="flex items-center justify-between mb-4">
        <div class="flex items-center">
          <% case @entity.entity_type %>
          <% when 'person' %>
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
          <% when 'place' %>
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
          <% when 'thing' %>
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
              </svg>
            </div>
          <% end %>
          <div>
            <h2 class="text-2xl font-bold text-gray-900"><%= @entity.name %></h2>
            <p class="text-sm text-gray-500"><%= entity_type_label(@entity.entity_type) %></p>
          </div>
        </div>
        <div class="text-right">
          <div class="text-2xl font-bold text-gray-900"><%= @entity.mention_count %></div>
          <div class="text-sm text-gray-500">mention<%= 's' if @entity.mention_count != 1 %></div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-gray-500 mb-1">Average Confidence</div>
          <div class="font-semibold text-gray-900"><%= number_to_percentage(@entity.average_confidence * 100, precision: 0) %></div>
        </div>
        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-gray-500 mb-1">First Mentioned</div>
          <div class="font-semibold text-gray-900">
            <% if @entity.first_mentioned_at %>
              <%= @entity.first_mentioned_at.strftime("%B %d, %Y") %>
            <% else %>
              N/A
            <% end %>
          </div>
        </div>
        <div class="bg-gray-50 rounded-lg p-3">
          <div class="text-gray-500 mb-1">Last Mentioned</div>
          <div class="font-semibold text-gray-900">
            <% if @entity.last_mentioned_at %>
              <%= @entity.last_mentioned_at.strftime("%B %d, %Y") %>
            <% else %>
              N/A
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Comments Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">All Mentions of <%= @entity.name %></h3>
        <p class="text-sm text-gray-600 mt-1">Comments where this <%= @entity.entity_type %> is mentioned.</p>
      </div>

      <!-- Comments List -->
      <div class="divide-y divide-gray-200">
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <div class="p-6">
              <div class="flex items-start space-x-3">
                <div class="flex-shrink-0">
                  <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                    <span class="text-sm font-medium text-gray-700">
                      <%= comment.user.name.first.upcase %>
                    </span>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-2 mb-2">
                    <span class="text-sm font-medium text-gray-900"><%= comment.user.name %></span>
                    <span class="text-sm text-gray-500">â€¢</span>
                    <span class="text-sm text-gray-500"><%= comment.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
                  </div>
                  <div class="prose prose-sm max-w-none">
                    <p class="text-gray-700 leading-relaxed"><%= comment.body %></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="p-6 text-center text-gray-500">
            <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <p>No mentions found for this <%= @entity.entity_type %>.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
