<div class="p-6">
  <div class="flex space-x-3">
    <div class="flex-shrink-0">
      <div class="h-8 w-8 rounded-full bg-indigo-500 flex items-center justify-center">
        <span class="text-sm font-medium text-white"><%= comment.user.name.first.upcase %></span>
      </div>
    </div>
    
    <div class="flex-1 min-w-0">
      <div class="flex items-center space-x-2 mb-2">
        <p class="text-sm font-medium text-gray-900"><%= comment.user.name %></p>
        <span class="text-sm text-gray-500">â€¢</span>
        <time class="text-sm text-gray-500" datetime="<%= comment.created_at.iso8601 %>">
          <%= time_ago_in_words(comment.created_at) %> ago
        </time>
      </div>
      
      <div class="prose prose-sm max-w-none">
        <p class="text-gray-700"><%= comment.body %></p>
      </div>
      
      <% if comment.location.present? || comment.occurred_at.present? %>
        <div class="mt-3 flex items-center space-x-4 text-sm text-gray-500">
          <% if comment.location.present? %>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <%= comment.location %>
            </div>
          <% end %>
          
          <% if comment.occurred_at.present? %>
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <%= comment.occurred_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <% if comment.is_memory_worthy? %>
        <div class="mt-3 flex items-center text-sm text-green-600">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Memory worthy
        </div>
      <% end %>
    </div>
  </div>
</div>
