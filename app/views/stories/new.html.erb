<% content_for :title, "New Story" %>

<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <!-- Header -->
  <div class="bg-white/80 backdrop-blur-sm shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <div class="flex items-center">
          <%= link_to root_path, class: "mr-3 text-gray-400 hover:text-gray-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <h1 class="text-xl font-semibold text-gray-900"><%= @intent_messaging[:title] %></h1>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-4"><%= @intent_messaging[:subtitle] %></h2>
      <p class="text-gray-600">Start with what comes to mind - we'll help you build it into something beautiful.</p>
    </div>
    
    <div class="bg-white rounded-2xl shadow-lg border border-gray-100 p-8">
      <%= form_with model: @story, local: true, class: "space-y-6" do |form| %>
        <% if @story.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-md p-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  There were <%= pluralize(@story.errors.count, "error") %> with your submission:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @story.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= form.label :title, "Story Title", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :title, 
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg",
              placeholder: "Give your story a name..." %>
        </div>

        <div>
          <%= form.label :description, "Your Story", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_area :description, rows: 6,
              class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-lg",
              placeholder: @intent_messaging[:placeholder] %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <%= form.label :start_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :start_date,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>

          <div>
            <%= form.label :end_date, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.date_field :end_date,
                class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
          </div>
        </div>

        <div class="flex justify-end space-x-4 pt-8 border-t border-gray-200">
          <%= link_to "Start Over", root_path,
              class: "px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-base font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
          <%= form.submit "Create My Story",
              class: "px-8 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all duration-200 transform hover:scale-105" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
