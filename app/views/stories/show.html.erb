<% content_for :title, @story.title %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <div class="flex items-center">
          <%= link_to stories_path, class: "mr-3 text-gray-400 hover:text-gray-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <h1 class="text-xl font-semibold text-gray-900"><%= @story.title %></h1>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Story Details -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="mb-4">
        <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= @story.title %></h2>
        <p class="text-gray-600"><%= @story.description %></p>
      </div>
      
      <div class="flex items-center text-sm text-gray-500 mb-4">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <%= @story.creator.name %>
        <span class="mx-2">â€¢</span>
        <%= @story.created_at.strftime("%B %d, %Y") %>
      </div>

      <% if @story.start_date || @story.end_date %>
        <div class="flex items-center text-sm text-gray-500">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <% if @story.start_date && @story.end_date %>
            <%= @story.start_date.strftime("%B %d") %> - <%= @story.end_date.strftime("%B %d, %Y") %>
          <% elsif @story.start_date %>
            <%= @story.start_date.strftime("%B %d, %Y") %>
          <% elsif @story.end_date %>
            <%= @story.end_date.strftime("%B %d, %Y") %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Synthesized Memory -->
    <% if @synthesized_memory %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-center mb-4">
          <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-gray-900">Synthesized Memory</h3>
        </div>
        
        <div class="prose prose-sm max-w-none">
          <p class="text-gray-700 leading-relaxed"><%= @synthesized_memory.content %></p>
        </div>
        
        <div class="mt-4 pt-4 border-t border-gray-100 text-sm text-gray-500">
          Generated on <%= @synthesized_memory.generated_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    <% end %>

    <!-- Comments Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Memories</h3>
        <p class="text-sm text-gray-600 mt-1">Share your memories and experiences from this story.</p>
      </div>

      <!-- New Comment Form -->
      <div id="new_comment_form" class="p-6 border-b border-gray-200">
        <%= render "comments/form", story: @story, comment: Comment.new %>
      </div>

      <!-- Comments List -->
      <div id="comments" class="divide-y divide-gray-200">
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <%= render "comments/comment", comment: comment %>
          <% end %>
        <% else %>
          <div class="p-6 text-center text-gray-500">
            <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <p>No memories shared yet. Be the first to add one!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
