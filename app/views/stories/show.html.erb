<% content_for :title, @story.title %>

<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between py-4">
        <div class="flex items-center">
          <%= link_to stories_path, class: "mr-3 text-gray-400 hover:text-gray-600" do %>
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
          <% end %>
          <h1 class="text-xl font-semibold text-gray-900"><%= @story.title %></h1>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <!-- Story Details -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
      <div class="mb-4">
        <h2 class="text-lg font-semibold text-gray-900 mb-2"><%= @story.title %></h2>
        <p class="text-gray-600"><%= @story.description %></p>
      </div>
      
      <div class="flex items-center text-sm text-gray-500 mb-4">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
        <%= @story.creator.name %>
        <span class="mx-2">â€¢</span>
        <%= @story.created_at.strftime("%B %d, %Y") %>
      </div>

      <% if @story.start_date || @story.end_date %>
        <div class="flex items-center text-sm text-gray-500">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <% if @story.start_date && @story.end_date %>
            <%= @story.start_date.strftime("%B %d") %> - <%= @story.end_date.strftime("%B %d, %Y") %>
          <% elsif @story.start_date %>
            <%= @story.start_date.strftime("%B %d, %Y") %>
          <% elsif @story.end_date %>
            <%= @story.end_date.strftime("%B %d, %Y") %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Synthesized Memory -->
    <% if @synthesized_memory %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-center mb-4">
          <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-gray-900">Synthesized Memory</h3>
        </div>
        
        <div class="prose prose-sm max-w-none">
          <p class="text-gray-700 leading-relaxed"><%= @synthesized_memory.content %></p>
        </div>
        
        <div class="mt-4 pt-4 border-t border-gray-100 text-sm text-gray-500">
          Generated on <%= @synthesized_memory.generated_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-center mb-4">
          <svg class="w-5 h-5 text-gray-400 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-gray-900">Entities</h3>
        </div>
        <div class="text-center text-gray-500 py-8">
          <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <p>No entities have been extracted from this story yet.</p>
          <p class="text-sm mt-1">Entities will appear here as you add memories and comments.</p>
        </div>
      </div>
    <% end %>

    <!-- Entities Section -->
    <% if @grouped_entities.values.any?(&:any?) %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-6">
        <div class="flex items-center mb-6">
          <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
          </svg>
          <h3 class="text-lg font-semibold text-gray-900">Entities</h3>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- People -->
          <% if @grouped_entities[:people].any? %>
            <div class="lg:col-span-1">
              <div class="flex items-center mb-3">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <h4 class="text-md font-medium text-gray-900">People</h4>
              </div>
              <div class="space-y-2">
                <% @grouped_entities[:people].each do |entity| %>
                  <%= link_to story_entity_path(@story, entity), class: "block p-3 bg-blue-50 hover:bg-blue-100 rounded-lg border border-blue-200 transition-colors duration-200" do %>
                    <div class="flex items-center justify-between">
                      <div class="flex-1 min-w-0">
                        <span class="font-medium text-blue-900 truncate block"><%= entity.name %></span>
                        <span class="text-xs text-blue-600"><%= entity_type_label(entity.entity_type) %></span>
                      </div>
                      <div class="ml-2 flex-shrink-0">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                          <%= entity.mention_count %> mention<%= 's' if entity.mention_count != 1 %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Places -->
          <% if @grouped_entities[:places].any? %>
            <div class="lg:col-span-1">
              <div class="flex items-center mb-3">
                <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <h4 class="text-md font-medium text-gray-900">Places</h4>
              </div>
              <div class="space-y-2">
                <% @grouped_entities[:places].each do |entity| %>
                  <%= link_to story_entity_path(@story, entity), class: "block p-3 bg-green-50 hover:bg-green-100 rounded-lg border border-green-200 transition-colors duration-200" do %>
                    <div class="flex items-center justify-between">
                      <div class="flex-1 min-w-0">
                        <span class="font-medium text-green-900 truncate block"><%= entity.name %></span>
                        <span class="text-xs text-green-600"><%= entity_type_label(entity.entity_type) %></span>
                      </div>
                      <div class="ml-2 flex-shrink-0">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                          <%= entity.mention_count %> mention<%= 's' if entity.mention_count != 1 %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>

          <!-- Things -->
          <% if @grouped_entities[:things].any? %>
            <div class="lg:col-span-1">
              <div class="flex items-center mb-3">
                <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center mr-3">
                  <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                  </svg>
                </div>
                <h4 class="text-md font-medium text-gray-900">Things</h4>
              </div>
              <div class="space-y-2">
                <% @grouped_entities[:things].each do |entity| %>
                  <%= link_to story_entity_path(@story, entity), class: "block p-3 bg-purple-50 hover:bg-purple-100 rounded-lg border border-purple-200 transition-colors duration-200" do %>
                    <div class="flex items-center justify-between">
                      <div class="flex-1 min-w-0">
                        <span class="font-medium text-purple-900 truncate block"><%= entity.name %></span>
                        <span class="text-xs text-purple-600"><%= entity_type_label(entity.entity_type) %></span>
                      </div>
                      <div class="ml-2 flex-shrink-0">
                        <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                          <%= entity.mention_count %> mention<%= 's' if entity.mention_count != 1 %>
                        </span>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Comments Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="p-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Memories</h3>
        <p class="text-sm text-gray-600 mt-1">Share your memories and experiences from this story.</p>
      </div>

      <!-- New Comment Form -->
      <div id="new_comment_form" class="p-6 border-b border-gray-200">
        <%= render "comments/form", story: @story, comment: Comment.new %>
      </div>

      <!-- Comments List -->
      <div id="comments" class="divide-y divide-gray-200">
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <%= render "comments/comment", comment: comment %>
          <% end %>
        <% else %>
          <div class="p-6 text-center text-gray-500">
            <svg class="mx-auto h-8 w-8 text-gray-400 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
            </svg>
            <p>No memories shared yet. Be the first to add one!</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
